<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gladheim.pokemonmvvm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".global.application.CustomApplication">

        <activity android:name="com.gladheim.pokemonmvvm.splash.ui.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.gladheim.pokemonmvvm.detail.ui.view.DetailActivity"/>
        <activity android:name="com.gladheim.pokemonmvvm.list.ui.view.ListActivity"/>

    </application>

</manifest>
